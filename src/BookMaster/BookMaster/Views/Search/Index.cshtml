@model PagedList.IPagedList<BookMaster.Models.Item>
@using BookMaster.Models
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css"/>

@{
    ViewBag.Title = "Index";
}

<h2>Items</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "Search", FormMethod.Get))
{
    <p>
        Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}
<div class="table">
    <div class="row">
        <div class="col-md-1">
            @Html.DisplayNameFor(model => model.First().ItemType)
        </div>
        <div class="col-md-1">
            @Html.ActionLink("Title", "Index", new { sortOrder = ViewBag.TitleSortParm, currentFilter = ViewBag.CurrentFilter })
        </div>
        <div class="col-md-1">
            @Html.ActionLink("Author", "Index", new { sortOrder = ViewBag.AuthorSortParm, currentFilter = ViewBag.CurrentFilter })
        </div>
        <div class="col-md-1">
            @Html.DisplayNameFor(model => model.First().ISBN)
        </div>
        <div class="col-md-1">
            @Html.DisplayNameFor(model => model.First().Publisher)
        </div>
        <div class="col-md-1">
            @Html.DisplayNameFor(model => model.First().Published)
        </div>
        <div class="col-md-1">
            @Html.DisplayNameFor(model => model.First().Edition)
        </div>
        <div class="col-md-1">
            @Html.DisplayNameFor(model => model.First().PublicationInformation)
        </div>
        <div class="col-md-1">
            @Html.DisplayNameFor(model => model.First().Pages)
        </div>
        <div class="col-md-1">
            @Html.DisplayNameFor(model => model.First().Location)
        </div>
        <div class="col-md-1">
            @Html.DisplayNameFor(model => model.First().Summary)
        </div>
    </div>

    @foreach (var item in Model)
    {
        <div class="row table-striped">
            <div class="col-md-1">
                @Html.DisplayFor(modelItem => item.ItemType)
            </div>
            <div class="col-md-1">
                @Html.DisplayFor(modelItem => item.Title)
            </div>
            <div class="col-md-1">
                <div class="col-md-6">
                    @Html.DisplayFor(modelItem => item.Author)
                </div>
                <div class="col-md-6">
                    @Html.DisplayFor(modelItem => item.PersonalAuthor)
                </div>
            </div>
            <div class="col-md-1">
                @Html.DisplayFor(modelItem => item.ISBN)
            </div>
            <div class="col-md-1">
                @Html.DisplayFor(modelItem => item.Publisher)
            </div>
            <div class="col-md-1">
                @Html.DisplayFor(modelItem => item.Published)
            </div>
            <div class="col-md-1">
                @Html.DisplayFor(modelItem => item.Edition)
            </div>
            <div class="col-md-1">
                @Html.DisplayFor(modelItem => item.PublicationInformation)
            </div>
            <div class="col-md-1">
                @Html.DisplayFor(modelItem => item.Pages)
            </div>
            <div class="col-md-1">
                @Html.DisplayFor(modelItem => item.Location)
            </div>
            <div class="col-md-1">
                @Html.DisplayFor(modelItem => item.Summary)
            </div>
            <div class="col-md-1">
                @Html.ActionLink("Edit", "Edit", new { id = item.ItemId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ItemId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ItemId })
            </div>
        </div>
    }

</div>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))