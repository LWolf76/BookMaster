@model IEnumerable<BM.Web.Models.Item>
@{
    ViewBag.Title = "BookMaster";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>

        </div>


    </section>
}
<div>
    <form method="get">
        Search: <input type="search" name="searchTerm" value="@ViewBag.searchTerm" /><input type="submit" value="Search by Title or Author" />
    </form>
</div>
<div>
    @foreach (var item in Model)
    {
        <div>
            <h4>@item.Title</h4>
            <div>Summary: @item.Summary</div>
            <div>Authr: @item.Author</div>
            <div>Pages: @item.Pages</div>
            <hr />
        </div>
    }
</div>